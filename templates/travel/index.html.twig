{% extends 'base.html.twig' %}

{% block title %}Boby Travel{% endblock %}
{% block body %}
  <main class="container">
    <header class="my-5">
      <h1>Boby Voyages</h1>
    </header>
    <ul class="row gy-3 list-unstyled justify-content-center justify-content-md-start">
    {% for travel in travels %}
        <li class="col-8 col-sm-6 col-md-4 col-lg-3">
          <article class="article-card">
            <div class="article-card__header">
              <img src="{{ travel.picture }}" alt="Image {{ travel.title }}" width="200">
            </div>
            <div class="article-card__body">
              <h2>
                {{ travel.title }}
              </h2>
              <div class="text-center mb-3 rating">
                {% for i in 1..travel.rate %}
                  <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512">
                    <path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"/>
                  </svg>
                {% endfor %}
              </div>
              <p>
                  {{ travel.description }}
              </p>
            </div>
            <div class="article-card__footer">
              <a href="{{ path('app_travel_show', {id: travel.id}) }}" class="btn btn-primary">Voir plus</a>
            </div>
          </article>
        </li>
    {% endfor %}
    </ul>
  </main>
{% endblock %}
